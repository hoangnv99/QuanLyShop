@model QuanLyShop.Models.KHACHHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string gtinh = "";
}
<h4><b>Thong tin Khách Hàng</b></h4>
    <div>
        <table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
            <tr>
                <td>
                    <table cellpadding="2" cellspacing="10" >
                        <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                        <tr>


                            <td>Mã nhân viên:</td>
                            <td>@Html.DisplayFor(model => model.MaKH)</td>
                        </tr>
                        <tr>
                            <td>Họ Tên nhân viên:</td>
                            <td>@Html.DisplayFor(model => model.HoTen)</td>
                        </tr>

                        <tr>
                            <td>Ngày sinh:</td>
                            <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                        </tr>
                        <tr>

                            <td>Giới tính:</td>
                            <td>
                                @{if (Model.GioiTinh == true)
                                    { gtinh = "Nam"; }
                                    else
                                    { gtinh = "Nữ"; }
                                }
                                @gtinh
                            </td>
                        </tr>

                        <tr>
                            <td>SDT:</td>
                            <td>@Html.DisplayFor(model => model.SoDienThoai)</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ:</td>
                            <td>@Html.DisplayFor(model => model.DiaChi)</td>
                        </tr>


                    </table>
                </td>
            </tr>
        </table>

    </div>
<p style="margin-left:50px;">
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaKH }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
